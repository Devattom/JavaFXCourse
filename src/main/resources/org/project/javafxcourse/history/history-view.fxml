<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.project.javafxcourse.controllers.history.HistoryController"
            style="-fx-background-color: #f5f5f5;">

    <!-- En-tÃªte -->
    <top>
        <StackPane style="-fx-background-color: #ffffff;
                          -fx-border-color: #e0e0e0;
                          -fx-border-width: 0 0 1 0;
                          -fx-padding: 20;">

            <!-- Contenu centrÃ© (titre + sous-titre) -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="ðŸ“œ Historique de recherche"
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #e50914;" />
                <Label text="Retrouvez vos recherches rÃ©centes"
                       style="-fx-font-size: 13px; -fx-text-fill: #666;" />
            </VBox>

            <!-- Bouton flottant en bas Ã  droite du header -->
            <Button fx:id="clearHistoryButton"
                    text="ðŸ—‘ï¸ Effacer l'historique"
                    StackPane.alignment="BOTTOM_RIGHT"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #e50914;
                           -fx-font-weight: bold;
                           -fx-border-color: #e50914;
                           -fx-border-radius: 6;
                           -fx-background-radius: 6;
                           -fx-padding: 6 12;
                           -fx-cursor: hand;
                           -fx-translate-x: -10;
                           -fx-translate-y: -5;"/>
        </StackPane>
    </top>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10 20 20 20;" alignment="TOP_CENTER">

            <!-- Spinner de chargement -->
            <StackPane fx:id="loadingPane" visible="false" managed="false">
                <ProgressIndicator maxWidth="40" maxHeight="40"/>
            </StackPane>

            <!-- Message si vide -->
            <Label fx:id="emptyLabel"
                   text="Aucun historique pour le moment"
                   visible="false"
                   style="-fx-font-size: 15px; -fx-text-fill: #999; -fx-padding: 20 0 0 0;"/>

            <!-- ScrollPane pour les cartes -->
            <ScrollPane fitToWidth="true"
                        style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;"
                        VBox.vgrow="ALWAYS">
                <FlowPane fx:id="historyContainer"
                          hgap="15"
                          vgap="15"
                          style="-fx-padding: 5;"
                />
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
