<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.project.javafxcourse.controllers.history.HistoryController"
            style="-fx-background-color: #f5f5f5;">

    <!-- En-tÃªte -->
    <top>
        <VBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <Label text="ðŸ“œ Historique de recherche"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #e50914;" />
            <Label text="Retrouvez vos recherches rÃ©centes"
                   style="-fx-font-size: 14px; -fx-text-fill: #666666; -fx-padding: 5 0 0 0;" />
        </VBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;" alignment="TOP_CENTER">

            <!-- Bouton pour effacer l'historique -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="clearHistoryButton"
                        text="ðŸ—‘ï¸ Effacer l'historique"
                        style="-fx-background-color: transparent; -fx-text-fill: #e50914; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #e50914; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 15;"/>
            </HBox>

            <!-- Spinner de chargement -->
            <StackPane fx:id="loadingPane" alignment="CENTER" visible="false" managed="false">
                <ProgressIndicator maxWidth="50" maxHeight="50"/>
            </StackPane>

            <!-- Message si vide -->
            <Label fx:id="emptyLabel"
                   text="Aucun historique pour le moment"
                   visible="false"
                   style="-fx-font-size: 16px; -fx-text-fill: #999; -fx-padding: 40 0 0 0;"/>

            <!-- ScrollPane pour les cartes -->
            <ScrollPane fitToWidth="true"
                        style="-fx-background-color: transparent; -fx-background: transparent;"
                        VBox.vgrow="ALWAYS">
                <VBox fx:id="historyContainer"
                      spacing="15"
                      style="-fx-padding: 10;"
                      alignment="TOP_CENTER">
                    <!-- Les cartes seront ajoutÃ©es ici dynamiquement -->
                </VBox>
            </ScrollPane>

        </VBox>
    </center>

</BorderPane>