<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.project.javafxcourse.controllers.StreamingAvailabilityController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <!-- Barre de titre -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="backButton"
                text="← Retour"
                style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #e50914; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Label fx:id="titleLabel"
               text=""
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #222;" />
    </HBox>

    <!-- Spinner de chargement (séparé du label de résultat) -->
    <StackPane fx:id="loadingPane" alignment="CENTER" visible="false" managed="false">
        <VBox spacing="10" alignment="CENTER">
            <ProgressIndicator fx:id="loadingSpinner" />
            <Label fx:id="infoLabel"
                   text=""
                   style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
        </VBox>
    </StackPane>

    <!-- Conteneur pour les résultats -->
    <VBox fx:id="resultsContainer" spacing="15" alignment="TOP_CENTER">
        <!-- Les résultats seront ajoutés ici -->
    </VBox>

    <!-- Message d'erreur -->
    <Label fx:id="errorLabel"
           text=""
           visible="false"
           style="-fx-text-fill: #e50914; -fx-font-weight: bold; -fx-font-size: 14px;"/>

</VBox>