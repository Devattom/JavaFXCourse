<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.Cursor?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.project.javafxcourse.controllers.MovieCardController"
      spacing="6"
      alignment="TOP_CENTER"
      style="-fx-background-color: #ffffff; -fx-background-radius: 8;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4,0,0,1);
             -fx-padding: 8 8 10 8;">

    <!-- Image avec taille fixe (uniformitÃ© visuelle) -->
    <ImageView fx:id="posterImage"
               fitWidth="150" fitHeight="220"
               preserveRatio="false"
               smooth="true"
               style="-fx-background-color: #f0f0f0; -fx-background-radius: 4;" />

    <!-- Titre -->
    <Label fx:id="titleLabel" wrapText="true"
           maxWidth="150"
           style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #222;"
           alignment="CENTER" />

    <!-- Ã‰toiles -->
    <HBox fx:id="starsContainer" spacing="3" alignment="CENTER" />

    <!-- Bouton -->
    <Button fx:id="watchButton"
            text="ðŸŽ¥ OÃ¹ regarder ?"
            onAction="#onWatchButtonClick"
            style="-fx-background-radius:6; -fx-background-color: #e50914;
                   -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 10px;
                   -fx-padding: 5 8;"
            maxWidth="Infinity">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <VBox.margin>
            <Insets top="4"/>
        </VBox.margin>
    </Button>
</VBox>
