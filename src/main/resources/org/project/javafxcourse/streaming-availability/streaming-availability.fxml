<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.FlowPane?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.project.javafxcourse.controllers.streamingAvailability.StreamingAvailabilityController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <!-- Barre de titre -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="backButton"
                text="← Retour à l'accueil"
                onAction="#onBackButtonClick"
                style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #e50914; -fx-font-weight: bold; -fx-cursor: hand;"
        />
    </HBox>

    <!-- Spinner de chargement (séparé du label de résultat) -->
    <StackPane fx:id="loadingPane" visible="false" managed="false">
        <VBox spacing="10" alignment="CENTER">
            <ProgressIndicator fx:id="loadingSpinner" />
            <Label fx:id="infoLabel"
                   style="-fx-font-size: 14px; -fx-text-fill: #666;"
            />
        </VBox>
    </StackPane>

    <!-- Conteneur principal avec image à gauche et infos à droite -->
    <HBox fx:id="availabilityContainer" spacing="20">
        <!-- Image à gauche -->
        <ImageView fx:id="posterImage"
                   fitWidth="360"
                   preserveRatio="true"
                   style="-fx-background-color: #f0f0f0; -fx-background-radius: 4;"
        />
        
        <!-- VBox avec titre et description à droite -->
        <VBox spacing="15">
            <Label fx:id="titleLabel"
                   wrapText="true"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #222;"
            />
            
            <Label fx:id="descriptionLabel"
                   wrapText="true"
                   style="-fx-font-size: 16px; -fx-text-fill: #444; -fx-line-spacing: 4px;"
            />
            
            <!-- Conteneur pour les plateformes de streaming -->
            <VBox spacing="10">
                <Label text="Disponible sur :" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #222;"
                />
                <FlowPane fx:id="streamingPlatformsContainer" 
                          hgap="10" 
                          vgap="10"
                />
            </VBox>
        </VBox>
    </HBox>
    
    <!-- Section pour les autres résultats -->
    <VBox fx:id="additionalResultsContainer" spacing="15" visible="false">
        <Label text="Ce n'est pas le bon titre ? Nous vous proposons les suivants :"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #222; -fx-padding: 0 0 10 0;"
        />
        <ScrollPane fx:id="additionalResultsScrollPane"
                    vbarPolicy="NEVER"
                    fitToHeight="true"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <HBox fx:id="additionalResultsHBox"
                  spacing="15"
                  style="-fx-padding: 5;"
            />
        </ScrollPane>
    </VBox>

    <!-- Message d'erreur -->
    <Label fx:id="errorLabel"
           visible="false"
           style="-fx-text-fill: #e50914; -fx-font-weight: bold; -fx-font-size: 14px;"
    />
</VBox>
